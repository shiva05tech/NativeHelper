    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".global.GlobalController"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NativeHelper"
        tools:targetApi="31">
        <activity
            android:name=".ItemListActivity"
            android:exported="false"
            android:label="@string/title_activity_item_list"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".ShopDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_shop_details"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".ShopListActivity"
            android:exported="false"
            android:label="@string/title_activity_shop_list"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".NewsDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_news_details"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".BaseActivity2"
            android:exported="false"
            android:label="@string/title_activity_base2" />
        <activity
            android:name=".NewsHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_news_home"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".NewsListActivity"
            android:exported="false"
            android:label="@string/title_activity_news_list"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".HomeScrollingActivity"
            android:exported="false"
            android:label="@string/title_activity_home_scrolling"
            android:theme="@style/Theme.NativeHelper" />
        <activity
            android:name=".NetworkInfo"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>