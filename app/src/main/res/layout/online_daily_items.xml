<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:contentPadding="2dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardBackgroundColor="@color/color_white"
    card_view:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shoplist_card_dailyitems_lin_hight"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="@dimen/news_card_morgin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialyitem_imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shoplist_card_dailyitems_imageview_hight"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_margin="@dimen/btn_dailyitemshop_card_morgin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="2"
                    android:textSize="@dimen/onlinedailyitems_heding_recly"
                    android:lineSpacingMultiplier=".75"
                    android:textColor="@color/news_heding_recly"
                    android:id="@+id/txt_dailyitem_brand_name"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:layout_toRightOf="@+id/VollyNetworkImageView1"
                    android:layout_toEndOf="@+id/VollyNetworkImageView1"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>





            <LinearLayout
                android:layout_margin="@dimen/news_card_morgin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/list_item_artile_vertical_margin"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="@dimen/list_item_artile_vertical_margin"
                android:layout_weight="3"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_margin="@dimen/news_card_morgin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txt_companyname"
                        style="style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.85"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:textColor="@color/online_daily_owner_recly"
                        android:textSize="@dimen/onlinedailyitems_shopname_recly"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_margin="@dimen/news_card_morgin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txt_online_itemunit"
                        style="style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.85"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:textColor="@color/news_date_recly"
                        android:textSize="@dimen/onlinedailyitems_via_recly"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_margin="@dimen/news_card_morgin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:id="@+id/txt_onlineitem_price"
                                style="style/TextAppearance.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:lineSpacingMultiplier="0.85"
                                android:maxLines="1"
                                android:paddingBottom="4dp"
                                android:singleLine="true"
                                android:textColor="@color/online_daily_mrp_recly"
                                android:textSize="@dimen/onlinedailyitems_price_recly"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_margin="@dimen/news_card_morgin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            >

                            <TextView
                                android:id="@+id/txt_onlineitem_mrp"
                                style="style/TextAppearance.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:lineSpacingMultiplier="0.85"
                                android:maxLines="1"
                                android:paddingBottom="4dp"
                                android:singleLine="true"
                                android:background="@drawable/shape_strikeonline"
                                android:textColor="@color/news_reptr_recly"
                                android:textSize="@dimen/onlinedailyitems_price_recly"
                                android:textStyle="bold" />
                        </LinearLayout>
                     <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        <Button
                            android:id="@+id/btn_online_shopbutton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/Item_add_button"
                            android:theme="@style/AddItem_button" />
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>






        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>