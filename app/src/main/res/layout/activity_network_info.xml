<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NetworkInfo">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_margin="@dimen/news_card_morgin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:text="@string/noconnection_heading"
                android:maxLines="2"
                android:textSize="@dimen/ntwk_info_heding"
                android:textColor="@color/news_heding_recly"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/news_card_morgin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:id="@+id/newsImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/news_card_imageview_hight"
                android:src="@drawable/network_breack_icon" />

        </LinearLayout>



        <LinearLayout
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_margin="@dimen/news_card_morgin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_artile_vertical_margin"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/list_item_artile_vertical_margin"
            android:layout_weight="3"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_margin="@dimen/news_card_morgin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:text="@string/noconnection_exp"
                        android:id="@+id/txt_newsDate"
                        style="style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.85"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:textColor="@color/ntwk_info_exp"
                        android:textSize="@dimen/ntwk_info_exp"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>