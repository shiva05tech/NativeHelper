<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:background="@color/color_white"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_margin="@dimen/news_card_morgin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingBottom="1dp"
                android:text="Title"
                android:maxLines="2"
                android:textSize="@dimen/shop_contenttitle_recly"
                android:lineSpacingMultiplier=".75"
                android:textColor="@color/shop_contenttitle_recly"
                android:id="@+id/txt_shopconttitle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:lineSpacingMultiplier="0.75"
            android:paddingBottom="4dp"
            android:textSize="@dimen/shop_contens_recly"
            android:textColor="@color/shop_content_recly"
            android:id="@+id/txt_shopcontents"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>